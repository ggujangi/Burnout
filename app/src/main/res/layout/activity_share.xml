<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.hbs.burnout.ui.share.ShareViewModel" />

        <variable
            name="handler"
            type="com.hbs.burnout.ui.share.ShareActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_btn_back"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:onClick="@{()->handler.finish()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/share_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{viewModel.shareData.title}"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="36dp"
            app:layout_constraintBottom_toBottomOf="@id/back_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@id/back_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_btn"
            tools:text="새는 영어로 버드, 사진 찍기" />

        <ImageView
            android:id="@+id/share_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_img_rounded"
            app:layout_constraintDimensionRatio="H, 1:0.8"
            app:layout_constraintLeft_toLeftOf="@id/share_title"
            app:layout_constraintRight_toRightOf="@id/share_title"
            app:layout_constraintTop_toBottomOf="@id/share_title"
            android:src="@drawable/gamjatwigim"/>

        <TextView
            android:id="@+id/share_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.shareData.content}"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintRight_toRightOf="@id/share_image"
            app:layout_constraintLeft_toLeftOf="@id/share_image"
            app:layout_constraintTop_toBottomOf="@id/share_image"
            tools:text="와우~ 맛있는 달콤한 마카롱~!\n사진만 봐도 너무 침이 고여요!"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progress_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/share_content"
            app:layout_constraintRight_toRightOf="@id/share_image"
            app:layout_constraintLeft_toLeftOf="@id/share_image"
            tools:listitem="@layout/item_share_progress"
            tools:itemCount="3"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_btn_share"
            app:backgroundTint="@color/color_your_chatting"
            app:tint="@android:color/white"
            app:layout_constraintRight_toLeftOf="@id/fab_next"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:src="@drawable/ic_btn_next"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@android:color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>