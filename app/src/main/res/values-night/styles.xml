<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splash_background_color</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="ChattingTextInputLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@android:color/primary_text_light</item>
        <item name="hintTextColor">@android:color/tertiary_text_light</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>

    <style name="Text.Dialog.Sns" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_dialog_text</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Shrine.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.Shrine.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Shrine.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">36dp</item>
    </style>

    <style name="ShapeAppearance.Shrine.XLargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">36dp</item>
    </style>

    <style name="ShapeAppearance.LargeComponent.Round" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ThemeOverlay.Catalog.MaterialAlertDialog.Outline.Cut" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.MaterialComponents.FloatingActionButton.Outline.Cut" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>>
        <item name="cornerSize">24dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="OutlinedCutDialog" parent="">
        <item name="shapeAppearanceOverlay">@style/ThemeOverlay.Catalog.MaterialAlertDialog.Outline.Cut</item>
    </style>

    <style name="SelectButtonStyle" parent="ShapeAppearance.Shrine.MediumComponent">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SelectContainerStyle" parent="ShapeAppearance.Shrine.LargeComponent">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TakePictureContainerStyle" parent="ShapeAppearance.Shrine.LargeComponent">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="MissionContainerStyle" parent="ShapeAppearance.Shrine.LargeComponent">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="EndingContainerStyle" parent="ShapeAppearance.Shrine.XLargeComponent">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


</resources>