<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.hbs.burnout.ui.mission.fragments.PermissionsFragment"
        android:label="PermissionsFragment" >

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        tools:layout="@layout/fragment_camera"
        android:name="com.hbs.burnout.ui.mission.fragments.CameraFragment"
        android:label="CameraFragment" >

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_camera_to_preview"
            app:destination="@id/preview_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true">
        </action>

    </fragment>

    <fragment
        android:id="@+id/preview_fragment"
        tools:layout="@layout/fragment_preview"
        android:name="com.hbs.burnout.ui.mission.fragments.PreviewResultFragment"
        android:label="PreviewFragment" >

        <action
            android:id="@+id/action_preview_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/preview_fragment"
            app:popUpToInclusive="true"/>

        <argument
            android:name="resultImage"
            app:nullable="true"
            app:argType="android.graphics.Bitmap" />

        <argument
            android:name="targetRotation"
            app:nullable="false"
            app:argType="integer" />

    </fragment>

</navigation>